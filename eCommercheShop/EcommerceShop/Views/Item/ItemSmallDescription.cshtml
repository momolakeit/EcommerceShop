@model EcommerceShop.Models.ViewModel.ItemDetails

@{
    ViewBag.Title = "ItemSmallDescription";
}





<div class="card " style="margin-top:20px; padding-bottom:20px;">
    <form action="~/Item/ajouterItemAuPanier">
        <a href="/Item/ItemDescription/@Model.MyProperty">
            <img class="card-img-top" style="width: 100%; height:150px;" src="@Url.Content(Model.itemImageLink)">
            <h5 class="card-title" style="text-align:center;">@Model.itemName</h5>
            <p class="card-text" style="text-align:center;">@Model.prix$</p>
            <input class="btn btn-primary"  type="submit"style="margin:0 auto; width: 90%;"  value="Ajouter au panier"/>
            @Html.HiddenFor(model => model.MyProperty)
        </a>
    </form>
</div>

