@model EcommerceShop.Models.ViewModel.Connection

@{
    ViewBag.Title = "Connection";
}



<form action="~/Client/Connection" class="formConnection" method="post" style=" margin: 0 auto; border-style: solid;border-width: thin;border-radius: 10px; padding: 30px;padding-bottom: 50px;margin-top:100px;margin-bottom:150px;min-width:35%;">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label for="exampleInputEmail1">Adresse Courriel</label>
        <input type="email" name="EmailAdress" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Adresse Courriel">
        @Html.ValidationMessageFor(Model => Model.EmailAdress, "", new { @class = "text-danger" })
        @if (ViewBag.notFound == true)
        {
            <p style="color:red">Le client n'existe pas</p>
        }
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Mot de passe</label>
        <input type="password" name="Password" class="form-control" id="exampleInputPassword1" placeholder="Mot de passe">
        @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })
    </div>
    <!--<div class="form-check">
         <input type="checkbox" name="Souvenir" class="form-check-input" id="exampleCheck1">
         <label class="form-check-label" for="exampleCheck1">Se souvenir de moi</label>
     </div>
        -->
    <a href="/Client/Inscription" style="display:block;"> Pas encore membre,Inscrivez-vous</a>
    <button type="submit" style="background-color: #28A745;" class="btn btn-primary">Submit</button>

</form>